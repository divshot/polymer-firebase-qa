{
  "rules": {
    "questions": {
      ".read": true,
      "$question_id": {
        ".write": "(!data.exists() && newData.exists() && auth != null) || (data.child('user/uid').val() == auth.uid)",
        "answers": {
          "$answer_id": {
            ".write": "(!data.exists() && newData.exists() && auth != null) || (data.child('user/uid').val() == auth.uid)"
          }
        }
      }
    }
  }
}